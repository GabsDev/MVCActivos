@model IEnumerable<Infraestructure.Models.Usuario>

<p>
    @Html.ActionLink("Reporte PDF", "CreatePdfUsuarioCatalogo", "Usuario")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Login)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellidos)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Estado)
    </td>
    <td>
        <input type="image" src="data:image/jpeg;charset=utf-8;base64,
                   @Convert.ToBase64String(item.Foto)"
               id="ImagenProducto" style="height:75px;width:75px">

    </td>
    @* <td>
            @Html.DisplayFor(modelItem => item.Rol.Descripcion)
        </td>*@

</tr>
    }

</table>
